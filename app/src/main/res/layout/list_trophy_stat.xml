<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="@dimen/card_horizontal_margin"
    android:paddingRight="@dimen/card_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trophy_icon"
        android:layout_width="@dimen/game_trophy_size"
        android:layout_height="@dimen/game_trophy_size" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/trophy_type_bronze"
                    android:layout_width="@dimen/trophy_icon_size_small"
                    android:layout_height="@dimen/trophy_icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bronze"/>

                <ImageView
                    android:id="@+id/trophy_type_silver"
                    android:layout_width="@dimen/trophy_icon_size_small"
                    android:layout_height="@dimen/trophy_icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/silver"/>

                <ImageView
                    android:id="@+id/trophy_type_gold"
                    android:layout_width="@dimen/trophy_icon_size_small"
                    android:layout_height="@dimen/trophy_icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/gold"/>

                <ImageView
                    android:id="@+id/trophy_type_platinum"
                    android:layout_width="@dimen/trophy_icon_size_small"
                    android:layout_height="@dimen/trophy_icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/platinum"/>

                <ImageView
                    android:id="@+id/trophy_type_secret"
                    android:layout_width="@dimen/trophy_icon_size_small"
                    android:layout_height="@dimen/trophy_icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/secret"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:singleLine="true"/>

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"/>

        </LinearLayout>
        
        <ImageView
            android:id="@+id/earned"
            android:layout_width="@dimen/earned_trophy_size"
            android:layout_height="@dimen/earned_trophy_size"
            android:layout_gravity="bottom|end"
            android:src="@drawable/secret"/>

    </FrameLayout>
</LinearLayout>
